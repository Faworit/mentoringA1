<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <description>
        Spring OXM and Castor
    </description>
    <class name="com.epam.ryabtsev.model.TicketsXml">
        <field name="tickets" type="com.epam.ryabtsev.model.impl.TicketImpl" collection="arraylist">
            <bind-xml name="ticket"/>
        </field>
    </class>
    <class name="com.epam.ryabtsev.model.impl.TicketImpl">
        <map-to xml="ticket" />
        <field name="id" type="long">
            <bind-xml name="id" node="attribute"/>
        </field>
        <field name="eventId" type="long">
            <bind-xml name="eventId" node="attribute"/>
        </field>
        <field name="userId" type="long">
            <bind-xml name="userId" node="attribute"/>
        </field>
        <field name="place" type="int">
            <bind-xml name="place" node="attribute"/>
        </field>
    </class>
</mapping>